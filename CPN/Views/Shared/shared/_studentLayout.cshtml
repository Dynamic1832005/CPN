<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Career Path Navigator</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f6fa;
            margin: 0;
            padding: 0;
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030;
            height: 80px; /* Increased height */
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-size: 35px; /* Bigger font size */
            font-weight: 700;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
        }

            .navbar-brand i {
                margin-right: 10px;
                color: #ffc107;
                font-size: 28px;
            }

        .navbar-dark .navbar-nav .nav-link {
            color: #ddd;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 12px 18px; /* Increased spacing */
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #fff;
                transform: translateY(-2px);
            }

        .navbar-nav .nav-link i {
            margin-right: 6px;
        }

        .logout-link {
            color: #ff4d4d !important;
            font-weight: bold;
        }

            .logout-link:hover {
                color: #e60000 !important;
            }

        .container.body-content {
            min-height: 80vh;
            padding-top: 0px; /* Push content below navbar */
        }

        /* Footer */
        footer {
            font-size: 14px;
            padding: 40px 0 20px 0;
            border-top: 1px solid #444;
            background-color: #212529;
            color: #ccc;
        }

            footer h5 {
                font-size: 18px;
                margin-bottom: 12px;
                color: #fff;
            }

            footer ul {
                padding-left: 0;
                list-style: none;
            }

                footer ul li {
                    margin-bottom: 6px;
                }

            footer p, footer a {
                font-size: 14px;
                color: #ccc;
            }

                footer a:hover {
                    text-decoration: underline;
                    color: #fff;
                }

            footer .text-center {
                margin-top: 20px;
                font-size: 13px;
                color: #999;
            }
    </style>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand text-light fw-bold" href="@Url.Action("Dashboard", "Student") ">
                <h2 style="color: #ffc107;"><i class="fas fa-compass text-warning"></i> IT Career Path Navigator</h2>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Dashboard", "Student")">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Quiz", "Student")">
                            <i class="fas fa-clipboard-list"></i> Quiz
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("QuizHistory", "Student")">
                            <i class="fas fa-history"></i> My Quiz History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Posts", "Student")">
                            <i class="fas fa-video"></i> Guideline Video
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="@Url.Action("Feedback", "Student")">
                            <i class="fas fa-comment-dots"></i> Feedback
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link logout-link" href="@Url.Action("Logout", "Account")">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>Career Path Navigator</h5>
                    <p>Helping students discover their future with confidence.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul>
                        <li><a href="@Url.Action("Dashboard", "Student")">Home</a></li>
                        <li><a href="@Url.Action("Quiz", "Student")">Quiz</a></li>
                        <li><a href="@Url.Action("Posts", "Student")">Guideline Videos</a></li>
                        <li><a href="@Url.Action("Feedback", "Student")">Feedback</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact</h5>
                    <p><i class="fas fa-envelope"></i> Dynamic@gmail.com</p>
                    <p><i class="fas fa-phone"></i> +95 9 981 804 641</p>
                </div>
            </div>
            <hr style="border-color: rgba(255,255,255,0.2);" />
            <div class="text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year Career Path Navigator. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
</body>
</html>
