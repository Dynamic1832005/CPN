@model CPN.Models.CSJob

@{
    ViewBag.Title = "Add CS Job";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!-- Import Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        font-family: 'Inter', sans-serif;
        background: #f4f7fc;
        color: #2c3e50;
    }

    .form-card {
        max-width: 700px;
        margin: 50px auto;
        background: #fff;
        padding: 40px 50px;
        border-radius: 20px;
        box-shadow: 0 12px 25px rgba(0,0,0,0.08);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }
    .form-card:hover {
        box-shadow: 0 20px 35px rgba(0,0,0,0.12);
        transform: translateY(-6px);
    }

    h2 {
        font-weight: 700;
        font-size: 2rem;
        text-align: center;
        
        color: #1a2a6c;
        vertical-align: middle;
    }
    h2 i {
        color: #007bff;
        margin-right: 12px;
        vertical-align: middle;
    }

    label {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 8px;
        display: block;
        color: #34495e;
    }

    .form-control {
        width: 100%;
        padding: 12px 18px;
        font-size: 1rem;
        border-radius: 12px;
        border: 1.8px solid #d1d9e6;
        background: #fefefe;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        box-sizing: border-box;
        font-weight: 400;
        color: #34495e;
    }
    .form-control::placeholder {
        color: #a0a8b9;
    }
    .form-control:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        background: #fff;
    }
    textarea.form-control {
        resize: vertical;
    }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 6px;
        color: #e74c3c;
        font-weight: 600;
    }

    .btn {
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        padding: 14px 30px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        border: none;
        user-select: none;
        text-decoration: none;
    }

    .btn i {
        margin-right: 10px;
        font-size: 1.3rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        box-shadow: 0 5px 12px rgba(0, 123, 255, 0.4);
    }
    .btn-primary:hover, .btn-primary:focus {
        background-color: #0056b3;
        box-shadow: 0 7px 18px rgba(0, 86, 179, 0.6);
        outline: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        margin-left: 16px;
        box-shadow: 0 5px 12px rgba(108, 117, 125, 0.4);
        text-align: center;
    }
    .btn-secondary:hover, .btn-secondary:focus {
        background-color: #545b62;
        box-shadow: 0 7px 18px rgba(84, 91, 98, 0.6);
        outline: none;
        text-decoration: none;
        color: white;
    }

    .form-group {
        margin-bottom: 28px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-card {
            padding: 30px 25px;
        }
        .btn-secondary {
            margin-left: 10px;
            padding: 12px 22px;
        }
    }
</style>

<div class="form-card" role="main" aria-labelledby="addCSJobHeading">
    <h2 id="addCSJobHeading"><i class="fas fa-briefcase"></i> Add CS Career</h2>

    @using (Html.BeginForm("AddCSJob", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter career title", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, placeholder = "Enter career's skill and salary" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary" aria-label="Save Job">
                <i class="fas fa-save"></i> Save Career
            </button>

            @Html.ActionLink("Back", "ManageJobs", new { department = "CS" }, new { @class = "btn btn-secondary", role = "button" })
        </div>
    }
</div>
