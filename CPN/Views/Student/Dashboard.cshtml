@model IEnumerable<CPN.Models.JobViewModel>

@{
    ViewBag.Title = "Job Opportunities";
    Layout = "~/Views/Shared/_studentLayout.cshtml";
}

<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="welcome-text">
    <h4>Welcome, <strong>@Session["Username"]</strong> </h4>
</div>

<h1 class="page-title">
    <i class="fas fa-briefcase"></i> Available Careers
</h1>

@if (Model != null && Model.Any())
{
    foreach (var job in Model)
    {
        <div class="job-section">
            <div class="job-header">
                <h2 class="job-title">
                    <i class="fas fa-laptop-code"></i> @job.Title
                </h2>
                <span class="department">@job.Department</span>
            </div>

            <div class="job-description">
                @Html.Raw(job.Description.Replace("\n", "<br/>"))
            </div>

            @if (!string.IsNullOrEmpty(job.VideoUrl))
            {
                <div class="video-container">
                    @if (job.VideoUrl.Contains("youtube.com") || job.VideoUrl.Contains("youtu.be"))
                    {
                        <iframe src="@job.VideoUrl"
                                allowfullscreen
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                loading="lazy"></iframe>
                    }
                    else
                    {
                        <video controls preload="metadata" src="@job.VideoUrl"></video>
                    }
                </div>
            }
        </div>
    }
}
else
{
    <p class="no-data">No job opportunities available at this time.</p>
}

<style>
    .page-title {
        text-align: center;
        font-size: 2.2rem;
        margin-bottom: 25px;
        color: #3498db; /* Blue color */
    }

    .job-section {
        background: #fff;
        border-left: 6px solid #3498db;
        padding: 30px;
        margin-bottom: 35px;
        border-radius: 8px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.08);
        min-height: 500px;
    }

    .job-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 15px;
    }

    .job-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #3498db; /* Blue color for job titles */
    }

    .department {
        color: blue;
        font-size: 1,8rem;
        padding: 6px 12px;
        border-radius: 12px;
        white-space: nowrap;
        font-weight: 500;
    }

    .job-description {
        font-size: 1.05rem;
        color: #444;
        line-height: 1.7;
        white-space: pre-wrap;
        margin-bottom: 20px;
    }

    .job-extra-details {
        background: #f9f9f9;
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 20px;
    }

        .job-extra-details h4 {
            margin-top: 0;
            color: #2c3e50;
        }

        .job-extra-details p {
            margin: 0;
            font-size: 1rem;
            color: #555;
            line-height: 1.6;
        }

    .video-container {
        position: relative;
        padding-top: 56.25%; /* 16:9 ratio */
        overflow: hidden;
        border-radius: 8px;
    }

        .video-container iframe,
        .video-container video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

    .no-data {
        text-align: center;
        font-size: 1.1rem;
        color: #777;
        margin-top: 20px;
    }

    .welcome-text h4 {
        color: #2c3e50;
        text-align: left;
        margin-bottom: 30px;
    }
</style>
