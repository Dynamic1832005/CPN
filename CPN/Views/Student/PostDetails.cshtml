@model CPN.Models.Post
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_studentLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow p-4 border-0 rounded">
        <h2 class="text-primary">@Model.Title</h2>
        <p class="text-muted">@Model.CreatedAt.ToString("f")</p>
        <hr />
        <p>@Html.Raw(Model.Description)</p>

        @if (!string.IsNullOrEmpty(Model.VideoPath))
        {
            <video width="100%" controls style="margin-top:20px;">
                <source src="@Url.Content(Model.VideoPath)" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        }
    </div>
</div>